<div class="row-fluid">
      <h3><%= team.get('teamname') %>: Line-Up</h3>
  
      <div class="row-fluid">
      <p>Instructions:</p>
      <ul>
        <li>To move from roster to boat: Click a name on the roster and click a seat.</li>
        <li>To move from boat to roster: Click a seat and click the HEADING of the roster.</li>
        <li>To swap seats: Click one seat and then click another.</li>
      </ul>

        <div class="col-xs-4 nopadding">
          <table
           id="roster"
           class="table table-bordered table-condensed table-hover">
            <thead>
              <h4>Roster</h4>
              <tr>
                <th>#</th>
                <th>First Name</th>
                <th>Last Name</th>
              </tr>
            </thead>
            <tbody>
            <% count = 1 %>
            <% offBoat.forEach(function(member) { %>
              <tr data-user-id = <%= member.id %>>
                <td><%= count %></td>
                <% count += 1 %>
                <td><%= member.escape('fname') %></td>
                <td><%= member.escape('lname') %></td>
              </tr>
            <% }); %>
            </tbody>
          </table>
        </div>
  
        <div class="col-xs-5 nopadding">
          <h4>Boat Seating</h4>
      
          <div class="boat">
            <div class="seat center" data-seat-num="0"></div>
  
            <div class="seat" data-seat-num="1"></div>
            <div class="seat" data-seat-num="3"></div>
            <div class="seat left" data-seat-num="5"></div>
            <div class="seat left" data-seat-num="7"></div>
            <div class="seat left" data-seat-num="9"></div>
            <div class="seat left" data-seat-num="11"></div>
            <div class="seat left" data-seat-num="13"></div>
            <div class="seat left" data-seat-num="15"></div>
            <div class="seat left" data-seat-num="17"></div>
            <div class="seat left" data-seat-num="19"></div>
  
            <div class="seat" data-seat-num="2"></div>
            <div class="seat" data-seat-num="4"></div>
            <div class="seat right" data-seat-num="6"></div>
            <div class="seat right" data-seat-num="8"></div>
            <div class="seat right" data-seat-num="10"></div>
            <div class="seat right" data-seat-num="12"></div>
            <div class="seat right" data-seat-num="14"></div>
            <div class="seat right" data-seat-num="16"></div>
            <div class="seat right" data-seat-num="18"></div>
            <div class="seat right" data-seat-num="20"></div>

            <div class="seat center" data-seat-num="21"></div>
          </div>
        </div>
        
        <div class="col-xs-2 nopadding">
          <h4>Status:</H4>
          <div id="weight_status">
            Weight Distribution
            <ul>
              <li id="weightfb"></li>
              <li id="weightlr"></li>
            </ul>
            
            Paddling Off-side
            <ul>
              <li id="offside"></li>
            </ul>
          </div>
        </div>
        
      </div>
    </div>
