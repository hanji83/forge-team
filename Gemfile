source 'https://rubygems.org'

gem 'rails', '4.1.0' # Rails
gem 'backbone-on-rails'
gem 'bcrypt', '~> 3.1.7' # Allows for user authorization
gem 'coffee-rails', '~> 4.0.0' # Use CoffeeScript for .js.coffee assets and views
gem 'jbuilder', '~> 1.2' # Build JSON APIs with ease.
gem 'jquery-rails' # Use jquery as the JS library
gem 'sass-rails', '~> 4.0.0' # Allows for SCSS for stylesheets
gem 'pg' # PostgresSQL
gem 'uglifier', '>= 1.3.0' # Compressor for JavaScript assets


group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end


group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
end


group :development, :test do
  gem 'debugger'
end


# gem 'sqlite3' # SQLite 3 Interface
# gem 'turbolinks' # https://github.com/rails/turbolinks; commented out to ensure no conflicts with Backbone